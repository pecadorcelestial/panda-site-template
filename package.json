{
  "name": "panda-site-template",
  "version": "1.0.0",
  "description": "A 'basic' template to start and run a site using NodeJS, React, Router, Redux, Styled-Components and Webpack.",
  "main": "server.js",
  "scripts": {
    "prestart": "webpack -p",
    "start": "set NODE_ENV=production && babel-node --presets @babel/env,@babel/react --plugins @babel/plugin-syntax-dynamic-import,dynamic-import-node,transform-class-properties server.js",
    "start:dev": "set NODE_ENV=development && babel-node --presets @babel/env,@babel/react --plugins @babel/plugin-syntax-dynamic-import,dynamic-import-node,transform-class-properties server.js",
    "test": "jest --coverage"
  },
  "author": "Francisco Rodriguez",
  "license": "ISC",
  "dependencies": {
    "prop-types": "^15.6.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-redux": "^5.0.7",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.0",
    "redux-thunk": "^2.3.0",
    "styled-components": "^3.4.5",
    "styled-theming": "^2.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/node": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.4.2",
    "babel-loader": "^8.0.0",
    "babel-plugin-dynamic-import-node": "^2.1.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "body-parser": "^1.18.3",
    "clean-webpack-plugin": "^0.1.19",
    "cookie-parser": "^1.4.3",
    "ejs": "^2.6.1",
    "express": "^4.16.3",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.5.0",
    "webpack": "^4.17.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-middleware": "^3.2.0",
    "webpack-dev-server": "^3.1.7",
    "webpack-hot-middleware": "^2.22.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules",
      "bower_components"
    ]
  }
}
